<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tournament Image -->
        <ImageView
            android:id="@+id/ivTournamentImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Tournament Image"
            tools:src="@drawable/banner_placeholder"/>

        <!-- Tournament Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Logo and Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/ivOrganizerLogo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/logo_atp"
                    android:contentDescription="Organizer Logo"/>

                <TextView
                    android:id="@+id/tvOrganizerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PICKLEBALL VIET NAM"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginStart="8dp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Tournament Title -->
            <TextView
                android:id="@+id/tvTournamentTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giải Pickle Ball tranh cup summer 2025"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="Location"
                    app:tint="#666666"/>

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đà Nẵng, Việt Nam"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <!-- Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="Date"
                    app:tint="#666666"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05/08/2025 - 06/09/2025"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>