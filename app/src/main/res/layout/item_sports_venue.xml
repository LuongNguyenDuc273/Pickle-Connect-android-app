<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Venue Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/ivVenue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Hình sân"/>
        </androidx.cardview.widget.CardView>

        <!-- Venue Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvVenueName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Sports"
                android:textSize="16sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvVenueAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="1 P. Phan Văn Trị, Hàng Bột, Đ..."
                android:textSize="12sp"
                android:textColor="#666666"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvVenuePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="SĐT: 0365590594"
                android:textSize="12sp"
                android:textColor="#F44336"/>
        </LinearLayout>

        <!-- Book Button -->
        <Button
            android:id="@+id/btnBookVenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="ĐẶT SÂN"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#00BFA5"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>