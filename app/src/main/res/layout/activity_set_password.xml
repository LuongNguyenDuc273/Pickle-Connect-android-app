<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:navigationIcon="@drawable/ic_back"
            app:title="ĐỔI MẬT KHẨU"
            app:titleTextColor="@android:color/black"
            android:elevation="0dp" />

        <!-- New Password Label -->
        <TextView
            android:id="@+id/tvNewPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu mới"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- New Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilNewPassword"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvNewPasswordLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="@color/green"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập mật khẩu mới"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Requirements Label -->
        <TextView
            android:id="@+id/tvPasswordRequirementsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu bao gồm:"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tilNewPassword"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Requirement 1: At least 8 characters -->
        <LinearLayout
            android:id="@+id/llRequirement1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvPasswordRequirementsLabel"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvRequirement1Icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="×"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvRequirement1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có ít nhất 8 ký tự"
                android:textSize="13sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Requirement 2: Uppercase letter -->
        <LinearLayout
            android:id="@+id/llRequirement2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/llRequirement1"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvRequirement2Icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="×"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvRequirement2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có chữ hoa"
                android:textSize="13sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Requirement 3: Lowercase letter -->
        <LinearLayout
            android:id="@+id/llRequirement3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/llRequirement2"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvRequirement3Icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="×"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvRequirement3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có chữ thường"
                android:textSize="13sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Requirement 4: Number -->
        <LinearLayout
            android:id="@+id/llRequirement4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/llRequirement3"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvRequirement4Icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="×"
                android:textColor="#D32F2F"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvRequirement4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Có chữ số"
                android:textSize="13sp"
                android:textColor="#666666" />
        </LinearLayout>

        <!-- Confirm Password Label -->
        <TextView
            android:id="@+id/tvConfirmPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập lại mật khẩu mới"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/llRequirement4"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Confirm Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilConfirmPassword"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvConfirmPasswordLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:endIconMode="password_toggle"
            app:boxStrokeColor="@color/green"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập lại mật khẩu mới"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tilConfirmPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnConfirm"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

        <!-- Confirm Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="XÁC NHẬN"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/green"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tilConfirmPassword"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
