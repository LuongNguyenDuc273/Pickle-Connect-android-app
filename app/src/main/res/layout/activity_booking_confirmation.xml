<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Booking.BookingConfirmActivity">

    <!-- Main Content ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@android:color/white"
                android:elevation="4dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Xác nhận thông tin đặt sân"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Section 1: Thông tin sân -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1. Thông tin sân"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <ImageButton
                            android:id="@+id/btnExpandSection1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Expand" />
                    </LinearLayout>

                    <!-- Collapsible Content -->
                    <LinearLayout
                        android:id="@+id/layoutSection1Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp">

                        <!-- Facility Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Tên sân:"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/tvFacilityName"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sân Cạch mạng tháng 8"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvSelectedSlots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            tools:listitem="@layout/item_selected_slot_group" />

                        <!-- Address -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Địa chỉ:"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/tvAddress"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="19 Cạch mạng tháng 8, Phường 1, Quận 4, Hồ Chí Minh"
                                android:textSize="14sp"
                                android:textColor="@android:color/black" />
                        </LinearLayout>

                        <!-- Booking Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Ngày đặt sân:"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/tvBookingDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="22/04/2025"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black" />
                        </LinearLayout>

                        <!-- Court Type -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:text="Loại vé:"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/tvCourtType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Đặt sân"
                                android:textSize="14sp"
                                android:textColor="@android:color/black" />
                        </LinearLayout>

                        <!-- Selected Time Slots -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khung giờ chơi:"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <!-- RecyclerView for selected slots grouped by field -->

                        <!-- Total count -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:background="#F5F5F5">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tổng giờ chơi:"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:paddingStart="8dp"
                                android:textColor="@android:color/black" />

                            <TextView
                                android:id="@+id/tvTotalHours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6h"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:paddingEnd="8dp"
                                android:textColor="#00BCD4" />
                        </LinearLayout>

                        <!-- Note (optional) -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú:"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/etNote"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:hint="Cần người nhắt bóng"
                            android:padding="12dp"
                            android:gravity="top"
                            android:background="@drawable/bg_edittext_rounded"
                            android:textSize="14sp"
                            android:inputType="textMultiLine"
                            android:maxLength="500" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section 2: Thông tin người đặt -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="2. Thông tin người đặt"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <ImageButton
                            android:id="@+id/btnExpandSection2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Expand" />
                    </LinearLayout>

                    <!-- Collapsible Content -->
                    <LinearLayout
                        android:id="@+id/layoutSection2Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp">

                        <!-- Full Name -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Họ và tên:"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phạm Gia Bảo"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="12dp" />

                        <!-- Phone -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số điện thoại:"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="0975779952"
                            android:padding="12dp"
                            android:background="@drawable/bg_edittext_rounded"
                            android:textSize="14sp"
                            android:inputType="phone"
                            android:maxLength="15"
                            android:layout_marginBottom="12dp" />

                        <!-- Email -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email:"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="giabao@gmail.com"
                            android:padding="12dp"
                            android:background="@drawable/bg_edittext_rounded"
                            android:textSize="14sp"
                            android:inputType="textEmailAddress"
                            android:layout_marginBottom="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Section 3: Thông tin thanh toán -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="3. Thông tin thanh toán"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <ImageButton
                            android:id="@+id/btnExpandSection3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_expand_more"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Expand" />
                    </LinearLayout>

                    <!-- Collapsible Content -->
                    <LinearLayout
                        android:id="@+id/layoutSection3Content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp">

                        <!-- Payment Method -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phương thức thanh toán:"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginBottom="8dp" />

                        <!-- Payment Method Selection -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_payment_method_selected">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_vnpay"
                                android:contentDescription="VNPay" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="VNPAY"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:layout_marginStart="12dp"
                                android:textColor="@android:color/black" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_check_circle"
                                app:tint="#4CAF50"
                                android:contentDescription="Selected" />
                        </LinearLayout>

                        <!-- Total Hours -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tổng giờ chơi:"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray" />

                            <TextView
                                android:id="@+id/tvPaymentTotalHours"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6h"
                                android:textSize="14sp"
                                android:textColor="@android:color/black" />
                        </LinearLayout>

                        <!-- Total Amount -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:background="#F0F8FF">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tổng tiền thanh toán:"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:paddingStart="8dp"
                                android:textColor="@android:color/black" />

                            <TextView
                                android:id="@+id/tvTotalAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1,000,000,000 VND"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:paddingEnd="8dp"
                                android:textColor="#00BCD4" />
                        </LinearLayout>

                        <!-- Terms and Conditions -->
                        <CheckBox
                            android:id="@+id/cbAgreeTerms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray" />

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Payment Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Thanh toán"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#00BCD4"
        android:padding="16dp"
        android:layout_margin="16dp"
        app:cornerRadius="8dp"
        android:enabled="false" />

    <!-- Loading Progress -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
